<Page x:Class="GovoriLegko.Lesson"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GovoriLegko"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lesson">

    <Grid>
        <DataGrid x:Name="DGLesson" AutoGenerateColumns="False" IsReadOnly="True" FontFamily="Comic Sans MS" FontSize="15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Width="*" Binding="{Binding Дата}" FontSize="16"/>
                <DataGridTextColumn Header="Начало" Width="*" Binding="{Binding Начало}" FontSize="16"/>
                <DataGridTextColumn Header="Длительноть" Width="*" Binding="{Binding Длительноть}" FontSize="16"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
